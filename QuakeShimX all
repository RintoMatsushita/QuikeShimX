const REPLAYS={
  '20110311': { epicenters:[{lat:38.1,lng:142.9,M:9.0,depth:24}], stations:[] },
  '20160416': { epicenters:[{lat:32.754,lng:130.763,M:7.0,depth:11}], stations:[] },
